---
import PortfolioLayout from '../layouts/PortfolioLayout.astro';
import Header from '../components/portfolio/Header.astro';
import Footer from '../components/portfolio/Footer.astro';

const apps = [
  {
    name: 'habit tap',
    description: '習慣化をサポートするシンプルなアプリ。毎日の小さな積み重ねを、タップひとつで記録。',
    icon: '✓',
    status: 'released' as const,
    tags: ['iOS', 'Android', '習慣化', 'ヘルスケア'],
    gradient: 'from-green-400 to-green-600'
  },
  {
    name: 'Evememo',
    description: 'イベントの記録と思い出を管理。大切な瞬間を、写真とメモで美しく保存。',
    icon: '📝',
    status: 'development' as const,
    tags: ['iOS', 'Android', '写真', '日記'],
    gradient: 'from-blue-400 to-purple-600',
    release: '2025年春'
  },
  {
    name: 'ColorPick',
    description: '写真から色を抽出するツール。デザイナーやクリエイター向けのカラーピッカー。',
    icon: '🎨',
    status: 'development' as const,
    tags: ['iOS', 'デザインツール'],
    gradient: 'from-pink-400 to-orange-600',
    release: '2025年夏'
  }
];
---

<PortfolioLayout 
  title="Apps - ナノナツ" 
  description="ナノナツが開発したスマートフォンアプリの一覧"
>
  <Header />
  
  <main class="flex-1">
    <!-- ヒーローセクション -->
    <section class="relative py-20 md:py-32 bg-gradient-to-br from-accent-light via-white to-sub-base overflow-hidden">
      <div class="absolute inset-0">
        <div class="absolute top-20 left-20 w-64 h-64 bg-accent/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-20 right-20 w-96 h-96 bg-accent/5 rounded-full blur-3xl"></div>
      </div>
      
      <div class="relative z-10 max-w-container mx-auto px-6 text-center">
        <h1 class="text-4xl md:text-6xl font-bold font-display text-text-primary mb-6 animate-fadeIn">
          Our Apps
        </h1>
        <p class="text-xl text-text-secondary max-w-2xl mx-auto animate-fadeIn" style="animation-delay: 0.1s">
          日常を豊かにする、シンプルで美しいアプリケーション
        </p>
      </div>
    </section>
    
    <!-- アプリグリッド -->
    <section class="py-20 -mt-10">
      <div class="max-w-container mx-auto px-6">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {apps.map((app, index) => (
            <div 
              class="group relative bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-500 overflow-hidden animate-fadeInUp"
              style={`animation-delay: ${index * 0.1}s`}
            >
              <!-- グラデーション背景 -->
              <div class={`absolute inset-0 bg-gradient-to-br ${app.gradient} opacity-0 group-hover:opacity-10 transition-opacity duration-500`}></div>
              
              <!-- コンテンツ -->
              <div class="relative p-8">
                <!-- アイコンとステータス -->
                <div class="flex items-start justify-between mb-6">
                  <div class={`w-16 h-16 bg-gradient-to-br ${app.gradient} rounded-2xl flex items-center justify-center text-white text-2xl shadow-lg transform group-hover:scale-110 transition-transform duration-300`}>
                    {app.icon}
                  </div>
                  <span class={`
                    text-xs px-3 py-1 rounded-full font-medium
                    ${app.status === 'released' 
                      ? 'bg-green-100 text-green-700' 
                      : 'bg-amber-100 text-amber-700'
                    }
                  `}>
                    {app.status === 'released' ? 'リリース済み' : '開発中'}
                  </span>
                </div>
                
                <!-- アプリ情報 -->
                <h3 class="text-2xl font-bold font-display text-text-primary mb-3 group-hover:text-accent transition-colors duration-300">
                  {app.name}
                </h3>
                <p class="text-text-secondary mb-6 line-clamp-3">
                  {app.description}
                </p>
                
                <!-- リリース予定 -->
                {app.status === 'development' && app.release && (
                  <div class="mb-6 p-4 bg-accent-light rounded-lg text-center">
                    <p class="text-sm font-medium text-accent">リリース予定</p>
                    <p class="text-lg font-bold text-text-primary">{app.release}</p>
                  </div>
                )}
                
                <!-- タグ -->
                <div class="flex flex-wrap gap-2 mb-6">
                  {app.tags.map(tag => (
                    <span class="text-xs px-3 py-1 bg-gray-100 text-gray-600 rounded-full">
                      {tag}
                    </span>
                  ))}
                </div>
                
                <!-- アクションボタン -->
                {app.status === 'released' ? (
                  <div class="flex gap-3">
                    <button class="flex-1 flex items-center justify-center gap-2 px-4 py-2 bg-black text-white text-sm rounded-lg hover:bg-gray-800 transition-colors duration-300">
                      <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                      </svg>
                      <span>App Store</span>
                    </button>
                    <button class="flex-1 flex items-center justify-center gap-2 px-4 py-2 bg-black text-white text-sm rounded-lg hover:bg-gray-800 transition-colors duration-300">
                      <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M3 20.5v-17c0-.83.67-1.5 1.5-1.5S6 2.67 6 3.5v17c0 .83-.67 1.5-1.5 1.5S3 21.33 3 20.5zm16.5-16.5c-.83 0-1.5.67-1.5 1.5v11c0 .83.67 1.5 1.5 1.5s1.5-.67 1.5-1.5v-11c0-.83-.67-1.5-1.5-1.5zm-8 5c-.83 0-1.5.67-1.5 1.5v6c0 .83.67 1.5 1.5 1.5s1.5-.67 1.5-1.5v-6c0-.83-.67-1.5-1.5-1.5z"/>
                      </svg>
                      <span>Google Play</span>
                    </button>
                  </div>
                ) : (
                  <button class="w-full px-4 py-3 bg-gradient-to-r from-accent to-accent-hover text-white font-medium rounded-lg hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-300">
                    開発の進捗を見る
                  </button>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- CTA セクション -->
    <section class="py-20 bg-gradient-to-r from-accent-light to-white">
      <div class="max-w-container mx-auto px-6 text-center">
        <h2 class="text-3xl font-bold font-display text-text-primary mb-6">
          アイデアをお持ちですか？
        </h2>
        <p class="text-lg text-text-secondary mb-8 max-w-2xl mx-auto">
          新しいアプリのアイデアや機能のリクエストがありましたら、
          お気軽にお問い合わせください。
        </p>
        <a 
          href="/contact" 
          class="inline-flex items-center px-8 py-4 bg-accent text-white font-medium rounded-full hover:bg-accent-hover transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
        >
          お問い合わせ
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </section>
  </main>
  
  <Footer />
</PortfolioLayout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fadeIn {
    animation: fadeIn 0.6s ease-out forwards;
  }
  
  .animate-fadeInUp {
    animation: fadeInUp 0.8s ease-out both;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>