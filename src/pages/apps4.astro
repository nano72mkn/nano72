---
import PortfolioLayout from '../layouts/PortfolioLayout.astro';
import Header from '../components/portfolio/Header.astro';
import Footer from '../components/portfolio/Footer.astro';

const apps = [
  {
    name: 'habit tap',
    tagline: 'シンプルな習慣化',
    description: '習慣化をサポートするシンプルなアプリ。毎日の小さな積み重ねを、タップひとつで記録。',
    icon: '✓',
    status: 'released' as const,
    bgColor: '#e6f4ea',
    accentColor: '#10b981',
    mockup: '📱',
    features: [
      { icon: '📊', title: 'シンプルな記録', desc: 'ワンタップで習慣を記録' },
      { icon: '📅', title: 'カレンダー表示', desc: '継続状況を一目で確認' },
      { icon: '🔔', title: 'リマインダー', desc: '習慣化をサポート' },
      { icon: '📲', title: 'ウィジェット', desc: 'ホーム画面から素早くアクセス' }
    ]
  },
  {
    name: 'Evememo',
    tagline: '思い出を美しく保存',
    description: 'イベントの記録と思い出を管理。大切な瞬間を、写真とメモで美しく保存。',
    icon: '📝',
    status: 'development' as const,
    bgColor: '#e6e9ff',
    accentColor: '#6366f1',
    mockup: '📱',
    features: [
      { icon: '📸', title: '写真付き記録', desc: '思い出を視覚的に保存' },
      { icon: '⏰', title: 'タイムライン', desc: '時系列で振り返り' },
      { icon: '🏷️', title: 'タグ管理', desc: '簡単に整理・検索' },
      { icon: '💾', title: 'エクスポート', desc: '大切なデータを安全に保管' }
    ]
  },
  {
    name: 'ColorPick',
    tagline: 'クリエイターのための色彩ツール',
    description: '写真から色を抽出するツール。デザイナーやクリエイター向けのカラーピッカー。',
    icon: '🎨',
    status: 'development' as const,
    bgColor: '#ffe6ea',
    accentColor: '#f43f5e',
    mockup: '📱',
    features: [
      { icon: '📷', title: 'リアルタイム抽出', desc: 'カメラから即座に色を取得' },
      { icon: '🎨', title: 'パレット生成', desc: '調和の取れた配色を提案' },
      { icon: '🔤', title: '複数形式対応', desc: 'HEX, RGB, HSL形式' },
      { icon: '📤', title: '共有機能', desc: '色情報を簡単にシェア' }
    ]
  }
];
---

<PortfolioLayout 
  title="Apps - ナノナツ" 
  description="ナノナツが開発したスマートフォンアプリの一覧"
>
  <Header />
  
  <main class="flex-1">
    {apps.map((app, index) => (
      <section 
        class="min-h-screen flex items-center relative overflow-hidden"
        style={`background-color: ${app.bgColor}`}
      >
        <!-- 背景装飾 -->
        <div class="absolute inset-0">
          <div 
            class="absolute top-20 -right-40 w-96 h-96 rounded-full blur-3xl opacity-30"
            style={`background-color: ${app.accentColor}`}
          ></div>
          <div 
            class="absolute -bottom-40 -left-40 w-96 h-96 rounded-full blur-3xl opacity-20"
            style={`background-color: ${app.accentColor}`}
          ></div>
        </div>
        
        <div class="relative z-10 max-w-container mx-auto px-6 py-20">
          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <!-- 左側：アプリ情報 -->
            <div class={`${index % 2 === 1 ? 'lg:order-2' : ''}`}>
              <!-- ステータスバッジ -->
              <span class={`
                inline-block text-sm px-4 py-1 rounded-full font-medium mb-6
                ${app.status === 'released' 
                  ? 'bg-green-100 text-green-700' 
                  : 'bg-amber-100 text-amber-700'
                }
              `}>
                {app.status === 'released' ? 'リリース済み' : '開発中'}
              </span>
              
              <!-- アプリ名とアイコン -->
              <div class="flex items-center gap-4 mb-4">
                <div 
                  class="w-16 h-16 rounded-2xl flex items-center justify-center text-3xl text-white shadow-lg"
                  style={`background-color: ${app.accentColor}`}
                >
                  {app.icon}
                </div>
                <h2 class="text-4xl md:text-5xl font-bold font-display text-text-primary">
                  {app.name}
                </h2>
              </div>
              
              <!-- タグライン -->
              <p 
                class="text-xl md:text-2xl font-medium mb-6"
                style={`color: ${app.accentColor}`}
              >
                {app.tagline}
              </p>
              
              <!-- 説明 -->
              <p class="text-lg text-text-secondary mb-8 leading-relaxed">
                {app.description}
              </p>
              
              <!-- 機能グリッド -->
              <div class="grid sm:grid-cols-2 gap-4 mb-8">
                {app.features.map(feature => (
                  <div class="bg-white/70 backdrop-blur-sm rounded-xl p-4">
                    <div class="flex items-start gap-3">
                      <span class="text-2xl">{feature.icon}</span>
                      <div>
                        <h4 class="font-semibold text-text-primary">{feature.title}</h4>
                        <p class="text-sm text-text-secondary">{feature.desc}</p>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
              
              <!-- CTAボタン -->
              {app.status === 'released' ? (
                <div class="flex gap-4">
                  <a 
                    href="#" 
                    class="inline-flex items-center px-6 py-3 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors"
                  >
                    <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                    </svg>
                    App Store
                  </a>
                  <a 
                    href="#" 
                    class="inline-flex items-center px-6 py-3 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors"
                  >
                    <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M3 20.5v-17c0-.83.67-1.5 1.5-1.5S6 2.67 6 3.5v17c0 .83-.67 1.5-1.5 1.5S3 21.33 3 20.5zm16.5-16.5c-.83 0-1.5.67-1.5 1.5v11c0 .83.67 1.5 1.5 1.5s1.5-.67 1.5-1.5v-11c0-.83-.67-1.5-1.5-1.5zm-8 5c-.83 0-1.5.67-1.5 1.5v6c0 .83.67 1.5 1.5 1.5s1.5-.67 1.5-1.5v-6c0-.83-.67-1.5-1.5-1.5z"/>
                    </svg>
                    Google Play
                  </a>
                </div>
              ) : (
                <button 
                  class="inline-flex items-center px-8 py-4 text-white font-medium rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all"
                  style={`background-color: ${app.accentColor}`}
                >
                  開発の進捗を見る
                  <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </button>
              )}
            </div>
            
            <!-- 右側：モックアップ -->
            <div class={`${index % 2 === 1 ? 'lg:order-1' : ''} flex items-center justify-center`}>
              <div class="relative">
                <!-- 装飾的な背景 -->
                <div 
                  class="absolute inset-0 rounded-3xl transform rotate-6 blur-xl opacity-30"
                  style={`background-color: ${app.accentColor}`}
                ></div>
                <!-- モックアップ -->
                <div class="relative bg-white rounded-3xl shadow-2xl p-8 transform hover:scale-105 transition-transform duration-500">
                  <div class="aspect-[9/16] w-64 md:w-80 bg-gradient-to-br from-white to-gray-50 rounded-2xl flex items-center justify-center">
                    <div class="text-center">
                      <div class="text-8xl mb-4 animate-pulse">{app.mockup}</div>
                      <p class="text-gray-400 font-medium">{app.name}</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- スクロールインジケーター -->
        {index < apps.length - 1 && (
          <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
            <svg class="w-8 h-8 text-text-secondary/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </div>
        )}
      </section>
    ))}
    
    <!-- フッターセクション -->
    <section class="py-20 bg-gradient-to-b from-accent-light to-white">
      <div class="max-w-container mx-auto px-6 text-center">
        <h2 class="text-3xl font-bold font-display text-text-primary mb-8">
          次のアプリのアイデアはありますか？
        </h2>
        <p class="text-lg text-text-secondary mb-8 max-w-2xl mx-auto">
          ユーザーの声から生まれる最高のアプリを一緒に作りましょう。
        </p>
        <a 
          href="/contact" 
          class="inline-flex items-center px-8 py-4 bg-accent text-white font-medium rounded-full hover:bg-accent-hover transition-all duration-300 shadow-lg hover:shadow-xl"
        >
          アイデアを共有する
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </a>
      </div>
    </section>
  </main>
  
  <Footer />
</PortfolioLayout>

<style>
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }
  
  .animate-pulse {
    animation: pulse 2s ease-in-out infinite;
  }
  
  @keyframes bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  
  .animate-bounce {
    animation: bounce 2s ease-in-out infinite;
  }
</style>