---
import PortfolioLayout from '../layouts/PortfolioLayout.astro';
import Header from '../components/portfolio/Header.astro';
import Footer from '../components/portfolio/Footer.astro';
import AppCard from '../components/portfolio/AppCard.astro';

const featuredApps = [
  {
    name: 'habit tap',
    description: '習慣化をサポートするシンプルなアプリ。毎日の小さな積み重ねを、タップひとつで記録。',
    icon: '✓',
    status: 'released' as const,
    tags: ['iOS', 'Android'],
    link: '/apps#habit-tap'
  },
  {
    name: 'Evememo',
    description: 'イベントの記録と思い出を管理。大切な瞬間を、写真とメモで美しく保存。',
    icon: '📝',
    status: 'development' as const,
    tags: ['iOS', 'Android'],
    link: '/apps#evememo'
  }
];

const news = [
  {
    date: '2024.03.01',
    title: 'Evememoの開発を開始しました',
    link: '#'
  },
  {
    date: '2023.12.15',
    title: 'habit tapがApp Storeでフィーチャーされました',
    link: '#'
  },
  {
    date: '2023.10.01',
    title: 'nano72.comをリニューアルしました',
    link: '#'
  }
];
---

<PortfolioLayout title="nano72 - 小さな太陽のような、温かいアプリを。">
  <Header />
  
  <main class="flex-1">
    <!-- ヒーローセクション -->
    <section class="py-20 md:py-30 animate-fadeIn">
      <div class="max-w-container mx-auto px-6 text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-text-primary mb-6">
          小さな太陽のような、<br class="md:hidden" />
          温かいアプリを。
        </h1>
        <p class="text-lg text-text-secondary max-w-2xl mx-auto">
          nano72（ナノナツ）は、日常生活を少しだけ豊かにする<br class="hidden md:inline" />
          スマートフォンアプリを個人で開発しています。
        </p>
      </div>
    </section>
    
    <!-- アプリ紹介セクション -->
    <section class="py-20 bg-sub-base">
      <div class="max-w-container mx-auto px-6">
        <h2 class="text-2xl md:text-3xl font-bold text-text-primary mb-12 text-center">
          開発アプリ
        </h2>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
          {featuredApps.map(app => (
            <AppCard {...app} />
          ))}
          
          <!-- もっと見るカード -->
          <article class="bg-white/50 rounded-xl p-6 border-2 border-dashed border-gray-300 flex items-center justify-center">
            <a 
              href="/apps" 
              class="text-center group"
            >
              <div class="text-4xl mb-3 opacity-50 group-hover:opacity-70 transition-opacity">
                →
              </div>
              <p class="text-text-secondary group-hover:text-accent transition-colors duration-300">
                すべてのアプリを見る
              </p>
            </a>
          </article>
        </div>
      </div>
    </section>
    
    <!-- お知らせセクション -->
    <section class="py-20">
      <div class="max-w-container mx-auto px-6">
        <h2 class="text-2xl md:text-3xl font-bold text-text-primary mb-12 text-center">
          お知らせ
        </h2>
        
        <div class="max-w-2xl mx-auto">
          <ul class="space-y-4">
            {news.map(item => (
              <li class="border-b border-border pb-4 last:border-0">
                <a href={item.link} class="group flex items-start justify-between hover:text-accent transition-colors duration-300">
                  <div>
                    <time class="text-sm text-text-secondary">{item.date}</time>
                    <h3 class="font-medium mt-1">{item.title}</h3>
                  </div>
                  <svg class="w-5 h-5 text-text-secondary group-hover:text-accent mt-1 transition-all duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </section>
    
    <!-- CTAセクション -->
    <section class="py-20 bg-accent-light">
      <div class="max-w-container mx-auto px-6 text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-text-primary mb-6">
          nano72について
        </h2>
        <p class="text-text-secondary mb-8 max-w-2xl mx-auto">
          個人開発者としての想いや、アプリ開発にかける思いをまとめています。
        </p>
        <a 
          href="/about" 
          class="inline-flex items-center text-accent hover:text-accent-hover font-medium transition-colors duration-300 group"
        >
          <span>詳しく見る</span>
          <svg class="w-5 h-5 ml-2 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </section>
  </main>
  
  <Footer />
</PortfolioLayout>