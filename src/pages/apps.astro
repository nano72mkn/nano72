---
import PortfolioLayout from '../layouts/PortfolioLayout.astro';
import Header from '../components/portfolio/Header.astro';
import Footer from '../components/portfolio/Footer.astro';
import AppCard from '../components/portfolio/AppCard.astro';

const apps = [
  {
    name: 'habit tap',
    description: '習慣化をサポートするシンプルなアプリ。毎日の小さな積み重ねを、タップひとつで記録。',
    icon: '✓',
    status: 'released' as const,
    tags: ['iOS', 'Android', '習慣化', 'ヘルスケア'],
    link: '#habit-tap',
    details: {
      release: '2023年10月',
      downloads: '10,000+',
      rating: '4.5',
      features: [
        'シンプルな習慣記録',
        'カレンダービュー',
        'リマインダー機能',
        'ウィジェット対応'
      ]
    }
  },
  {
    name: 'Evememo',
    description: 'イベントの記録と思い出を管理。大切な瞬間を、写真とメモで美しく保存。',
    icon: '📝',
    status: 'development' as const,
    tags: ['iOS', 'Android', '写真', '日記'],
    link: '#evememo',
    details: {
      release: '2025年春予定',
      features: [
        '写真付きイベント記録',
        'タイムライン表示',
        'タグ管理',
        'エクスポート機能'
      ]
    }
  },
  {
    name: 'ColorPick',
    description: '写真から色を抽出するツール。デザイナーやクリエイター向けのカラーピッカー。',
    icon: '🎨',
    status: 'development' as const,
    tags: ['iOS', 'デザインツール'],
    link: '#colorpick',
    details: {
      release: '2025年夏予定',
      features: [
        'カメラからリアルタイム色抽出',
        'カラーパレット生成',
        'HEX/RGB/HSL対応',
        '色の保存・共有'
      ]
    }
  }
];
---

<PortfolioLayout 
  title="Apps - nano72" 
  description="nano72が開発したスマートフォンアプリの一覧"
>
  <Header />
  
  <main class="flex-1">
    <!-- ページヘッダー -->
    <section class="py-16 md:py-20 bg-sub-base">
      <div class="max-w-container mx-auto px-6 text-center">
        <h1 class="text-3xl md:text-4xl font-bold text-text-primary mb-4 animate-fadeIn">
          Apps
        </h1>
        <p class="text-lg text-text-secondary animate-fadeIn" style="animation-delay: 0.1s">
          開発したアプリケーション
        </p>
      </div>
    </section>
    
    <!-- アプリ一覧 -->
    <section class="py-20">
      <div class="max-w-container mx-auto px-6">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {apps.map(app => (
            <AppCard {...app} />
          ))}
        </div>
      </div>
    </section>
    
    <!-- アプリ詳細セクション -->
    <section class="py-20 bg-sub-base">
      <div class="max-w-container mx-auto px-6">
        <div class="space-y-20">
          {apps.map((app, index) => (
            <div id={app.link.replace('#', '')} class="scroll-mt-24">
              <div class={`grid md:grid-cols-2 gap-12 items-center ${index % 2 === 1 ? 'md:flex-row-reverse' : ''}`}>
                <!-- アプリ情報 -->
                <div class={`space-y-6 ${index % 2 === 1 ? 'md:order-2' : ''}`}>
                  <div class="flex items-start justify-between">
                    <h2 class="text-2xl md:text-3xl font-bold text-text-primary">
                      {app.name}
                    </h2>
                    <span class={`
                      text-sm px-3 py-1 rounded-full font-medium
                      ${app.status === 'released' 
                        ? 'bg-green-100 text-green-700' 
                        : 'bg-amber-100 text-amber-700'
                      }
                    `}>
                      {app.status === 'released' ? 'リリース済み' : '開発中'}
                    </span>
                  </div>
                  
                  <p class="text-text-secondary">
                    {app.description}
                  </p>
                  
                  {app.details && (
                    <div class="space-y-4">
                      {app.details.release && (
                        <div class="flex items-center text-sm">
                          <span class="text-text-secondary w-24">リリース:</span>
                          <span class="text-text-primary">{app.details.release}</span>
                        </div>
                      )}
                      {app.details.downloads && (
                        <div class="flex items-center text-sm">
                          <span class="text-text-secondary w-24">ダウンロード:</span>
                          <span class="text-text-primary">{app.details.downloads}</span>
                        </div>
                      )}
                      {app.details.rating && (
                        <div class="flex items-center text-sm">
                          <span class="text-text-secondary w-24">評価:</span>
                          <span class="text-text-primary">⭐ {app.details.rating}</span>
                        </div>
                      )}
                      
                      {app.details.features && (
                        <div>
                          <h3 class="text-sm font-semibold text-text-primary mb-2">主な機能</h3>
                          <ul class="space-y-1">
                            {app.details.features.map(feature => (
                              <li class="flex items-start text-sm text-text-secondary">
                                <span class="text-accent mr-2">•</span>
                                {feature}
                              </li>
                            ))}
                          </ul>
                        </div>
                      )}
                    </div>
                  )}
                  
                  <div class="flex flex-wrap gap-2">
                    {app.tags.map(tag => (
                      <span class="text-xs px-3 py-1 bg-accent-light text-accent rounded-md">
                        {tag}
                      </span>
                    ))}
                  </div>
                  
                  {app.status === 'released' && (
                    <div class="flex gap-4 pt-4">
                      <a 
                        href="#" 
                        class="inline-flex items-center px-6 py-3 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors duration-300"
                      >
                        <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                        </svg>
                        App Store
                      </a>
                      <a 
                        href="#" 
                        class="inline-flex items-center px-6 py-3 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors duration-300"
                      >
                        <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M3 20.5v-17c0-.83.67-1.5 1.5-1.5S6 2.67 6 3.5v17c0 .83-.67 1.5-1.5 1.5S3 21.33 3 20.5zm16.5-16.5c-.83 0-1.5.67-1.5 1.5v11c0 .83.67 1.5 1.5 1.5s1.5-.67 1.5-1.5v-11c0-.83-.67-1.5-1.5-1.5zm-8 5c-.83 0-1.5.67-1.5 1.5v6c0 .83.67 1.5 1.5 1.5s1.5-.67 1.5-1.5v-6c0-.83-.67-1.5-1.5-1.5z"/>
                        </svg>
                        Google Play
                      </a>
                    </div>
                  )}
                </div>
                
                <!-- アプリスクリーンショット/プレビュー -->
                <div class={`${index % 2 === 1 ? 'md:order-1' : ''}`}>
                  <div class="aspect-[9/16] bg-gradient-to-br from-accent-light to-white rounded-2xl flex items-center justify-center shadow-card">
                    <div class="text-6xl opacity-50">
                      {app.icon}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</PortfolioLayout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fadeIn {
    animation: fadeIn 0.6s ease-out forwards;
  }
</style>