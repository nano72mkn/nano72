---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: 'GitHub', url: 'https://github.com/nano72mkn', icon: 'github' },
  { name: 'Twitter', url: 'https://twitter.com/nano72mkn', icon: 'twitter' },
];
---

<footer class="mt-auto bg-sub-base">
  <div class="max-w-container mx-auto px-6 py-12">
    <div class="flex flex-col md:flex-row items-center justify-between space-y-4 md:space-y-0">
      <!-- 著作権表示 -->
      <p class="text-sm text-text-secondary">
        © {currentYear} ナノナツ. All rights reserved.
      </p>
      
      <!-- ソーシャルリンクとBuy Me a Coffee -->
      <div class="flex items-center space-x-6">
        {socialLinks.map(link => (
          <a 
            href={link.url} 
            target="_blank"
            rel="noopener noreferrer"
            aria-label={link.name}
            class="text-text-secondary hover:text-accent transition-colors duration-300"
          >
            {link.icon === 'github' && (
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"></path>
              </svg>
            )}
            {link.icon === 'twitter' && (
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"></path>
              </svg>
            )}
          </a>
        ))}
        
        <!-- Buy Me a Coffee ボタン -->
        <div class="bmc-button-container">
          <script type="text/javascript" src="https://cdnjs.buymeacoffee.com/1.0.0/button.prod.min.js" data-name="bmc-button" data-slug="nano72" data-color="#FFDD00" data-emoji="🍕"  data-font="Cookie" data-text="Buy me a pizza" data-outline-color="#000000" data-font-color="#000000" data-coffee-color="#ffffff" ></script>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .bmc-button-container {
    display: flex;
    align-items: center;
  }
</style>