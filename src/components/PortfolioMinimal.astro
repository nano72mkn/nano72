---
const projects = [
  {
    title: 'ECサイトリニューアル',
    category: 'Web開発',
    description: '大手アパレルブランドのECサイトを全面リニューアル。売上が前年比150%に向上。',
    image: '/api/placeholder/400/300',
    results: ['売上150%向上', 'CV率2.5倍', 'ページ速度80%改善']
  },
  {
    title: '業務効率化システム',
    category: 'システム開発',
    description: '製造業向けの在庫管理システムを開発。業務時間を60%削減。',
    image: '/api/placeholder/400/300',
    results: ['業務時間60%削減', 'ミス率90%減少', 'コスト30%削減']
  },
  {
    title: 'マーケティング戦略立案',
    category: 'コンサルティング',
    description: 'スタートアップ企業のマーケティング戦略を策定。新規顧客獲得数が3倍に。',
    image: '/api/placeholder/400/300',
    results: ['新規顧客3倍', 'LTV200%向上', 'CAC50%削減']
  }
];
---

<section id="portfolio" class="py-20 md:py-30 bg-sub-base">
  <div class="max-w-container mx-auto px-6">
    <!-- セクションヘッダー -->
    <div class="text-center mb-16">
      <h2 class="text-h2 md:text-4xl font-bold text-text-primary mb-4">
        実績紹介
      </h2>
      <p class="text-lg text-text-secondary max-w-2xl mx-auto">
        これまでに手がけたプロジェクトの一部をご紹介します
      </p>
    </div>
    
    <!-- プロジェクトグリッド -->
    <div class="grid md:grid-cols-3 gap-8">
      {projects.map((project) => (
        <div class="group bg-white rounded-xl overflow-hidden shadow-card hover:shadow-card-hover transition-all duration-base">
          <!-- 画像 -->
          <div class="relative h-48 overflow-hidden bg-gray-100">
            <div class="absolute inset-0 bg-gradient-to-br from-accent/20 to-accent/40"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <span class="text-6xl opacity-50">📊</span>
            </div>
          </div>
          
          <!-- コンテンツ -->
          <div class="p-6">
            <!-- カテゴリ -->
            <span class="inline-block px-3 py-1 bg-accent/10 text-accent text-xs font-medium rounded-full mb-3">
              {project.category}
            </span>
            
            <!-- タイトル -->
            <h3 class="text-xl font-bold text-text-primary mb-3">
              {project.title}
            </h3>
            
            <!-- 説明 -->
            <p class="text-text-secondary mb-4 text-sm leading-relaxed">
              {project.description}
            </p>
            
            <!-- 成果 -->
            <div class="space-y-2 pt-4 border-t border-border">
              {project.results.map((result) => (
                <div class="flex items-center text-sm">
                  <svg class="w-4 h-4 text-accent mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-text-primary font-medium">{result}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- もっと見るボタン -->
    <div class="text-center mt-12">
      <a href="#contact" class="inline-flex items-center px-6 py-3 border-2 border-text-primary text-text-primary font-medium rounded-lg hover:bg-text-primary hover:text-white transition-all duration-base">
        もっと実績を見る
        <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>